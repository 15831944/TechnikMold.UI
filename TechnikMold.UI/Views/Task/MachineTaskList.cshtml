        <div id="Toolbar" style="margin-left:14px">
            <ul class="nav nav-pills">
                <li class="dropdown all-camera-dropdown">
                    <button class="dropdown-toggle btn btn-info" data-toggle="dropdown" href="#">
                        @ViewBag.Title
                        <b class="caret"></b>
                    </button>
                    <ul class="dropdown-menu">
                        @for (int i = 1; i <= 6; i++)
                        {
                            if (i != 5)
                            {
                                <li role="presentation">
                                    <a class="TaskTypeLink" href="/Task/MachineTaskList?TaskType=@i&State=@ViewBag.State&MoldNumber=@ViewBag.MoldNumber">
                                        @_taskType.GetTypeName(i)
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </li>

                <li class="dropdown all-camera-dropdown">
                    <button class="dropdown-toggle btn btn-info" data-toggle="dropdown" href="#">
                        @if (ViewBag.State == 0)
                        {
                            @:当前任务
                        }
                        else
                        {
                            @:历史任务
                        }

                        <b class="caret"></b>
                    </button>
                    <ul class="dropdown-menu">
                        <li role="presentation">
                            <a class="TaskTypeLink"
                               href="/Task/MachineTaskList?TaskType=@ViewBag.TaskType&State=0&MoldNumber=@ViewBag.MoldNumber">当前任务</a>
                        </li>
                        <li role="presentation">
                            <a class="TaskTypeLink"
                               href="/Task/MachineTaskList?TaskType=@ViewBag.TaskType&State=1&MoldNumber=@ViewBag.MoldNumber">历史任务</a>
                        </li>
                    </ul>
                </li>
                @if (ViewBag.State == 0)
                {
                    if (_wsDep.Contains(DeptID))
                    {
                        <li>
                            <button class="dropdown-toggle btn btn-primary" data-toggle="dropdown" href="#">设置优先级</button>
                            <ul class="dropdown-menu">
                                <li role="presentation"><a href="#" class="priority" id="1">1</a></li>
                                <li role="presentation"><a href="#" class="priority" id="2">2</a></li>
                                <li role="presentation"><a href="#" class="priority" id="3">3</a></li>
                                <li role="presentation"><a href="#" class="priority" id="4">4</a></li>
                                <li role="presentation"><a href="#" class="priority" id="5">5</a></li>
                            </ul>
                        </li>
                        <li><button class="btn btn-primary" id="AddToQueue">设置加工开始</button></li>
                        switch (type)
                        {
                            case 1://电极任务
                                <li><button class="btn btn-primary" id="CNCItemList">电极信息</button></li>
                                <li><button class="btn btn-primary" id="PointCheck">任务点检</button></li>
                                break;
                            case 2://EDM任务                               
                                <li><button class="btn btn-primary" id="EDMProcessList">加工选中任务</button></li>
                                <li><button class="btn btn-primary" id="FinishTask">设置加工结束</button></li>
                                <li><button class="btn btn-primary" id="EleQCResult">电极确认</button></li>
                                <li><button class="btn btn-primary" id="EleInStock">电极库存</button></li>
                                break;
                            case 4://铣铁任务
                                <li><button class="btn btn-primary" id="PointCheck">任务点检</button></li>
                                break;
                            default:
                                <li><button class="btn btn-primary" id="FinishTask">设置加工结束</button></li>
                                break;
                        }
                        @*只有主管以上级别可以设置加工设备信息*@
                        if ((PosID >= 2) && _wsDep.Contains(DeptID))
                        {
                            <li><button class="btn btn-primary" id="MachineSetting">加工设备管理</button></li>
                        }
                        if ((DeptID == 7) && (type == 1 || type == 4))
                        {
                            <li><button class="btn btn-primary" id="AddCNCTask">新建CNC加工任务</button></li>
                        }
                        else if (DeptID == 8 && type == 2)
                        {
                            <li>
                                <button class="dropdown-toggle btn btn-primary" data-toggle="dropdown" href="#">新建任务</button>
                                <ul class="dropdown-menu">
                                    <li role="presentation"><a href="/Task/AddEDMTask">新建EDM加工任务</a></li>
                                    <li role="presentation"><a href="/Task/AddCNCTask">新建CNC加工任务</a></li>
                                </ul>
                            </li>
                        }
                        <li><button class="btn btn-primary" id="OutSource">任务外发</button></li>
                        <li><button class="btn btn-primary" id="CancelOutSource">取消外发</button></li>
                    }
                }
                else if (ViewBag.State == 1)
                {
                    <li>
                        <input type="text" class="col-sm-1 form-control" id="TaskKeyword" placeholder="任务名关键字" />
                    </li>
                    <li><button class="btn btn-primary" id="QueryTask">查询</button></li>
                }
            </ul>
        </div>
        <div class="col-sm-11" style="float:left;">
            <table id="TaskGrid"></table>
            <div id="jqGridPager"></div>
        </div>
    </div>
</div>

