@{
    int PurchaseType=ViewBag.PurchaseType;
    int _DeptID;
    int UserID;
    try
    {
        _DeptID =Convert.ToInt16( Request.Cookies["User"]["Department"]);
    }
    catch
    {
        _DeptID = 0;
    }
