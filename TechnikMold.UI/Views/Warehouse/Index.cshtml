<div style="margin-top:60px">
   
        <h2>
            @ViewBag.Title
        </h2>

        
        <div class="col-sm-2">
            @if (ViewBag.PurchaseType != 2)
            {
                <button class="btn btn-primary col-sm-12" id="RefreshMold">刷新模号列表</button>
                <input type="text" id="Keyword" class="form-control" />
                <input type="hidden" id="WMoldNumber" />
                <input type="hidden" id="PurchaseType" value="@ViewBag.PurchaseType" />
                <input type="hidden" id="StockTypes" value="" />
                <select class="form-control" id="MoldSelect" size="3"></select>
