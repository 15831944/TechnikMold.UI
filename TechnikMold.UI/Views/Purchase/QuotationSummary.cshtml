                        }

                    </tr>
                    <tr>
                        @foreach (QRSupplier _qrsup in Model.QRSuppliers)
                        {
                            <td class="total" style="width:100px;">未税总价</td>
                            <td class="totalWT" style="width:100px;" >含税总价</td>
