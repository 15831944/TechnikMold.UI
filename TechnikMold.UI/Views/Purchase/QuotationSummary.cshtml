                                if ((_quotation != null) && (_quotation.UnitPrice > 0))
                                {
                                    <td class="total" >@_quotation.TotalPrice</td>
                                    <td class="totalWT" ><span>@_quotation.TotalPriceWT</span></td>
                                    <td >@_quotation.ShipDate.ToString("yyyy-MM-dd")</td>

