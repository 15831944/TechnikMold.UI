@model QRQuotationSummaryViewModel
@{
    ViewBag.Title = "供应商报价汇总";
    int Row = 0;
}

<style>
    td {
        text-align: center;
        vertical-align: central;
        word-break: keep-all;
        border: 1px solid rgba(0,0,0,0.1);
        margin: 0px;
        padding: 0px;
        font-family: "微软雅黑" !important;
    }

    p {
        margin: 0px;
        padding: 0px;
    }
    /*div1*/
    #div1 td {
        height: 150px;
        border-style: none solid solid solid;
    }
    /*div2*/
    #div2 label {
        width: 200px;
    }

    .p1 {
        width: 200px;
    }

    .p2 {
        width: 100px;
    }

    .total {
        display: none;
    }

    .div2_row1 {
        height: 100px;
        border-style: none solid solid solid;
    }

    .div2_row2 {
        height: 50px;
    }
    /*div3*/
    #div3 td {
        height: 50px;
    }
    /*div4*/
    .div4_row {
        height: 50px;
    }

    .div4_row_p {
